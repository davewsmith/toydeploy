[Unit]
Description=uWSGI Emperor service
After=syslog.target

[Service]
ExecStart={{ app_dir }}/venv/bin/uwsgi --emperor /etc/uwsgi/apps-enabled --uid {{ ansible_user }} --gid {{ ansible_user}} --logto2 /var/log/uwsgi/emperor.log
Restart=always
KillSignal=SIGQUIT
Type=notify
StandardError=syslog
NotifyAccess=all

[Install]
WantedBy=multi-user.target
